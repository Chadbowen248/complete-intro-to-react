{
	"extends": [
		"airbnb",
		"prettier",
		"prettier/react"
	],
	"plugins": [
		"prettier"
	],
  "parser": "babel-eslint",
  "rules": {
    "no-param-reassign": [2, { "props": false }],
    "no-unused-expressions": ["error", {"allowTernary": true}],
    "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
    "react/forbid-prop-types": 0
  },
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	}
}
